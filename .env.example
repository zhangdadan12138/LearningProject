# -------------------------
# 基本环境（复制并改名为 .env）
# -------------------------
ENVIRONMENT=production
PROJECT_NAME=FastAPI Production Project
DEBUG=false

# SECRET_KEY 用于 JWT 等加密，请用强随机字符串
SECRET_KEY=replace-with-your-secret-key

# SQLAlchemy/Postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password_here
POSTGRES_DB=fastapi_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# DATABASE_URL：如果你希望在 .env 里直接定义 URL，可以使用下面一行（优先于拆分字段）
# DATABASE_URL=postgresql://postgres:postgres_password_here@postgres:5432/fastapi_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# CORS - 填写前端域名或 ["*"]（生产请限制）
CORS_ORIGINS=["https://your-frontend.example.com"]

# Gunicorn / Uvicorn settings
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120

# Nginx相关（可选）
# 若使用外部 TLS（反向代理后端），这些配置用于 Nginx 模板
SERVER_NAME=your.domain.com
